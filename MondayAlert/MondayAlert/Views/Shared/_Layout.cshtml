        function CheckGiftAvaility() {
            //myStopFunction();
            $('#myModal').modal('hide');
            $("audio")[0].pause();
            var question = $.parseJSON(document.getElementById("Question").value);
            //check gift availability and save
            var aaaa = '/Home/MyAlarmsOnHit?resultStatus=1&supriseID=' + question['SupriseID'];
            $.ajax({
                url: aaaa,
                type: 'POST',
                //data: { "resultStatus": 1, "supriseID": question['SurpriseID'] },
                success: function (result) {
                    $('#couponID').text(result[0]);
                    $('#coupon_desc').text(result[1]);
                    $("#CouponImage").attr("src", result[2]);
                    $('#SuccessModal').modal('show');
                },
                error: function (error) {
                    alert('error');
                }
            });
        }

        //Checking validation ....
        function AnswerIsCorrectOrNot() {
            //myStopFunction();
            $('#myModal').modal('hide');
            $("audio")[0].pause();
            //check answer
            var result = false;
            var question = $.parseJSON(document.getElementById("Question").value);
            if (document.getElementById('OptionA').checked) {

                if (document.getElementById('OptionA').value == question['Answer']) {
                    result = true;
                }
                else {
                    result = false;
                }
            }
            else if (document.getElementById('OptionB').checked) {
                if (document.getElementById('OptionB').value == question['Answer']) {
                    result = true;
                }
                else {
                    result = false;
                }
            }
            else if (document.getElementById('OptionC').checked) {
                if (document.getElementById('OptionC').value == question['Answer']) {
                    result = true;
                }
                else {
                    result = false;
                }
            }
            if (result == true) {
                //update coupon count and alarm hit

                var aaaa = '/Home/MyAlarmsOnHit?resultStatus=1&supriseID=' + question['SupriseID'];
                $.ajax({
                    url: aaaa,
                    type: 'POST',
                    //data: { "resultStatus": 1, "supriseID": question['SurpriseID'] },
                    success: function (result) {
                        $('#couponID').text(result[0]);
                        $('#coupon_desc').text(result[1]);
                        $("#CouponImage").attr("src", result[2]);

                    },
                    error: function (error) {
                        alert('error');
                    }
                });

                $('#SuccessModal').modal('show');
            }
            else {
                var aaaa = '/Home/MyAlarmsOnHit?resultStatus=0&supriseID=' + question['SupriseID'];
                $.ajax({
                    url: aaaa,
                    type: 'POST',
                    //data: { "resultStatus": 1, "supriseID": question['SurpriseID'] },
                    success: function (result) {
                        $('#couponID').text(result[0]);
                        $('#coupon_desc').text(result[1]);

                    },
                    error: function (error) {

                    }
                });
                $('#ErrorModal').modal('show');
            }

        }
    </script>
