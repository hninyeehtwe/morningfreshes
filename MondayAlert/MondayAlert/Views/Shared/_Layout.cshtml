        $(function () {
            if (alerted == 0) {
                validateAlarm();
            }
            //var myVar = setTimeout(
            //    validateAlarm(), 2000);
            setInterval(function () {
                if (alerted==0) {
                    validateAlarm();
                }
                
            }, 30000)//30sec
            function validateAlarm() {
                var isRequestAuthenticated = '@Request.IsAuthenticated';
                if (isRequestAuthenticated == 'True') {

                    var d = new Date();
                    var combine = ("0" + d.getHours()).slice(-2) + ":" + ("0" + d.getMinutes()).slice(-2);

                    var from = '@System.Configuration.ConfigurationManager.AppSettings["AlertTimeFrom"].ToString()';
                    var to = '@System.Configuration.ConfigurationManager.AppSettings["AlertTimeTo"].ToString()';

                    if (combine >= from && combine <= to) {
                        alerted = 1;
                        alert(1);
                        showModal();
                        //clearTimeout(myVar);
                    }
                    else if (combine > from && combine > to) {

                        $('#myModal').modal('hide');
                        $("audio")[0].pause();
                    }

                }
            }


            function showModal() {
                $('#myModal').modal('show');
                $("audio")[0].play();
            }

            function checkToTime() {
                var to = '@System.Configuration.ConfigurationManager.AppSettings["AlertTimeTo"].ToString()';

                var d = new Date();
                var combine = ("0" + d.getHours()).slice(-2) + ":" + ("0" + d.getMinutes()).slice(-2);

                if (combine == to) {
                    $('#myModal').modal('hide');
                    $("audio")[0].pause();
                }

                checkToTime();
            }

            $('.gallery-grid1 a').Chocolat();
        });

    </script>
